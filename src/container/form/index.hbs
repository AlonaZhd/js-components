<form class="form" id="form">
    <img width="100%" height="200px" src="https://picsum.photos/1200/1250" alt="Form image" class="form__image">

    <h1 class="form__title">Регістрація користувача</h1>

    <div class="form__group">
        <label for="username" class="form__label">ім'я користувача</label>
        <div class="form__group--btn">
            <input type="text" class="form__input" id="username" name="username" required>
            <span class="form__button-save">save</span>
        </div>
    </div>

    <div class="form__group">
        <label for="email" class="form__label">Email</label>
        <input type="email" class="form__input" id="email" name="email" required>
    </div>

    <div class="form__group">
        <label for="age" class="form__label">Age</label>
        <div class="form__group--btn">
            <input type="number" class="form__input" id="age" name="age" required>
            <span class="form__button-add" operator="+" value="10">+10</span>
            <span class="form__button-add" operator="-" value="10">-10</span>
        </div>
    </div>

    <div class="form__group">
        <label for="role" class="form__label">Виберіть пароль</label>
        <select name="role" id="role" class="form__select" required>
            <option value="" disabled="" selected="">Роль</option>
            <option value="user">Користувач</option>
            <option value="admin">Адміністратор</option>
        </select>
    </div>

    <div class="form__group form__group--checkbox">
        <label for="agree" class="form__label">Відправити повідомлення на email</label>
        <input type="checkbox" class="form__input" id="agree" name="agree" required>
    </div>
    <button class="form__button" type="button">Зареєструватися</button>

    <div id="outer">
        <div id="inner" class="form__button-add">
            Click me!
        </div>
    </div>
</form>

